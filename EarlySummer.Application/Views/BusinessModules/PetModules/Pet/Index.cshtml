@model List<EarlySummer.BusinessModules.PetModules.Models.PetModel>
@{
    ViewBag.Title = "Index";
}
@if (Model.Count() > 0)
{
    <table class="table">

        <tr>
            <td>宠物名称</td>
            <td>进入CD时间</td>
            <td>已进/还没</td>
            <td>上次时间</td>
        </tr>
        @foreach (var item in Model)
        {
            var color = "";
            if (item.InCD) { color = "style=background-color:deepskyblue"; }
            <tr>
                <td @color>@item.PetName</td>
                <td @color>@item.InTime</td>
                <td @color>@item.CDTime</td>
                <td @color>@item.LastTime.Replace("/","-")</td>
            </tr>
        }
    </table>
}

